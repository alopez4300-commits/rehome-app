{
  "name": "rehome-v2",
  "version": "2.0.0",
  "description": "AI-Centered Project Management Platform - Laravel 11 + Filament v3",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "spa": "./scripts/dev/start-spa.sh",
    "be": "php artisan serve --host=0.0.0.0 --port=8000",
    "fe": "cd frontend && npm run dev",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "composer run-script test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "composer run-script lint",
    "lint:frontend": "cd frontend && npm run lint",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "composer run-script typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "composer install && php artisan key:generate && php artisan migrate --force && php artisan db:seed --force",
    "setup:frontend": "cd frontend && npm install",
    "fresh": "npm run setup && docker-compose up -d"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "laravel-vite-plugin": "^1.3.0",
    "vite": "^5.4.20"
  },
  "engines": {
    "node": ">=20.0.0",
    "php": ">=8.3.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/react-query": "^5.90.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "react-refresh": "^0.18.0",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  }
}
